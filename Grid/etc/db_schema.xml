<?xml version="1.0" encoding="UTF-8"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
   <table name="employee_data" resource="default" engine="innodb" comment="Employee Data">
      <column xsi:type="smallint" name="id" padding="7" unsigned="false" nullable="false" identity="true" comment="ID" />
      <column xsi:type="varchar" name="Name" nullable="false" length="20" comment="Name" />
      <column xsi:type="varchar" name="Email" nullable="false" length="30" comment="Email" />
      <column xsi:type="varchar" name="Mobile" nullable="false" length="20" comment="Descrition" />
      <constraint xsi:type="primary" referenceId="PRIMARY">
         <column name="id" />
      </constraint>
   </table>
</schema>